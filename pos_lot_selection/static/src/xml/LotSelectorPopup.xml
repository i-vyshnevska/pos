<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.EditListPopup" t-inherit-mode="extension">

        <xpath expr="//main[hasclass('list-lines')]" position="replace">
            <main class="body">
                <input
                    type="text"
                    class="popup-input list-line-input"
                    id="new_select"
                    list="prepared_lots"
                    placeholder="Serial/Lot Number"
                />
                    <datalist id="prepared_lots">
                        <option
                        t-foreach="lots"
                        t-as="lot"
                        t-key="lot_index"
                        t-att-value="lot.name"
                    >
                            <t t-esc="lot.name" />
                        </option>
                    </datalist>
                </main>
        </xpath>
    </t>

</templates>
